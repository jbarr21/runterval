<?xml version="1.0" encoding="utf-8"?>
<manifest
  package="io.github.jbarr21.runterval"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <uses-permission android:name="android.permission.WAKE_LOCK" />
  <uses-permission android:name="android.permission.VIBRATE" />

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">

    <activity android:name=".ui.LauncherActivity" />
    <activity android:name=".ui.WorkoutActivity" />
    <activity android:name=".ui.TimerActivity" />

    <activity-alias
      android:name=".Launcher"
      android:targetActivity=".ui.LauncherActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity-alias>

    <receiver android:name=".service.AmbientUpdateReceiver">
      <intent-filter>
        <action android:name="io.github.jbarr21.runterval.action.AMBIENT_UPDATE" />
      </intent-filter>
    </receiver>

  </application>
</manifest>
